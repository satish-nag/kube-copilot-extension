{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "rootDir": "src",
    "outDir": "out",
    "sourceMap": true,
	"skipLibCheck": true,
    "strict": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "moduleResolution": "node",
    "types": ["node", "vscode"]
  },
  "exclude": ["node_modules", ".vscode-test", "src/test/**"]
}